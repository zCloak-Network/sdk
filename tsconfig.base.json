{
  "extends": "@zcloak/dev/config/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@zcloak/crypto": ["crypto/src"],
      "@zcloak/crypto/*": ["crypto/src/*"],
      "@zcloak/ctype": ["ctype/src"],
      "@zcloak/ctype/*": ["ctype/src/*"],
      "@zcloak/did": ["did/src"],
      "@zcloak/did/*": ["did/src/*"],
      "@zcloak/did-resolver": ["did-resolver/src"],
      "@zcloak/did-resolver/*": ["did-resolver/src/*"],
      "@zcloak/keyring": ["keyring/src"],
      "@zcloak/keyring/*": ["keyring/src/*"],
      "@zcloak/message": ["message/src"],
      "@zcloak/message/*": ["message/src/*"],
      "@zcloak/vc": ["vc/src"],
      "@zcloak/vc/*": ["vc/src/*"],
      "@zcloak/verify": ["verify/src"],
      "@zcloak/verify/*": ["verify/src/*"],
      "@zcloak/wasm": ["wasm/src"],
      "@zcloak/wasm/*": ["wasm/src/*"],
      "@zcloak/wasm-asm": ["wasm-asm/src"],
      "@zcloak/wasm-asm/*": ["wasm-asm/src/*"],
      "@zcloak/wasm-bridge": ["wasm-bridge/src"],
      "@zcloak/wasm-bridge/*": ["wasm-bridge/src/*"],
      "test-support": ["test-support/src"],
      "test-support/*": ["test-support/src/*"],
    },
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
