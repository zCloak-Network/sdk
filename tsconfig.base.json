{
  "extends": "@zcloak/dev/config/tsconfig.json",
  "compilerOptions": {
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "composite": false,
    "jsx": "react-jsx",
    "paths": {
      "@zcloak/crypto": ["crypto/src"],
      "@zcloak/crypto/*": ["crypto/src/*"],
      "@zcloak/did": ["did/src"],
      "@zcloak/did/*": ["did/src/*"],
      "@zcloak/did-resolver": ["did-resolver/src"],
      "@zcloak/did-resolver/*": ["did-resolver/src/*"],
      "@zcloak/keyring": ["keyring/src"],
      "@zcloak/keyring/*": ["keyring/src/*"],
      "@zcloak/util": ["util/src"],
      "@zcloak/util/*": ["util/src/*"],
      "@zcloak/vc": ["vc/src"],
      "@zcloak/vc/*": ["vc/src/*"],
      "@zcloak/verify": ["verify/src"],
      "@zcloak/verify/*": ["verify/src/*"],
    },
    "skipLibCheck": true
  }
}
